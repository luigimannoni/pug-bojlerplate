mixin title(title, classes, padded)
  - var tableAttrs = {class: classes}
  table.container(width="660", align="center", border="0", cellpadding="0", cellspacing="0")&attributes(tableAttrs)
    tbody
      tr
        - var tdAttrs = {class: padded ? 'py-4 px-3' : ''}
        td.column-12.is-first.is-last()&attributes(tdAttrs)
          h1= title
